<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>


    <error-page>
        <exception-type>com.yura.repairservice.exception.EntityNotFoundException</exception-type>
        <location>/loginError</location>
    </error-page>

    <error-page>
        <exception-type>com.yura.repairservice.exception.AlreadyRegisteredUserException</exception-type>
        <location>/alreadyRegisteredError</location>
    </error-page>

    <error-page>
        <exception-type>com.yura.repairservice.exception.InvalidUserParameterException</exception-type>
        <location>/registrationError</location>
    </error-page>

    <error-page>
        <location>/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>




</web-app>

